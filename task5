    <script>
        const fileButton=document.getElementById("File");
        let Image="";
        let submitButton=document.querySelector(".postbutton");
        let inputField=document.getElementById('input');
        let students=document.getElementById("students");
        let i=0;
        submitButton.addEventListener("click",AjoutPost);
        function AjoutPost(){
            let li=document.createElement("li");
            li.id="line"+i;
            i++;
            if(inputField.value="" ){
                Alert("Veuillez ajouter un étudiant avec son image s'il vous plaît ");
            }
            
            }
            
        }
        submitButton.addEventListener("keypress", function(e){
            if(e.key=="Enter"){
                AjoutPost();
            }
        });



    </script>
    
